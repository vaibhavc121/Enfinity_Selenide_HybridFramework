<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="ParallelTestSuite" thread-count="5" parallel="tests">

	<groups>
		<run>
			<include name="regression"></include>
			<include name="datadriven"></include>
		</run>
	</groups>

	<listeners>
		<listener class-name="utilities.ExtentReportManager"></listener>
	</listeners>


	<test name="Chrome Tests">
		<parameter name="os" value="windows"></parameter>
		<parameter name="browser" value="chrome"></parameter>

		<classes>

			<class name="testCases.TC_LicensesTest" />
			<class name="testCases.TC_DelegationTest" />
			<class name="testCases.TC_AssetIssueTest" />			
			<class name="testCases.TC_DocumentTypeTest" />
			<class name="testCases.TC_QualificationTest" />
			<class name="testCases.TC_BankTest" />
			<class name="testCases.TC_WorkLocationTest" />
			<class name="testCases.TC_ReligionTest" />
			<class name="testCases.TC_CalendarTest" />
			<class name="testCases.TC_GradeTest" />
			<class name="testCases.TC_DesignationTest" />
			<class name="testCases.TC_DeptTest" />
			<class name="testCases.TC_EmployeeTest" />
			<class name="testCases.TC_LoginTest" />			
		</classes>
	</test>
	
	<test name="Edge Tests">
		<parameter name="os" value="windows"></parameter>
		<parameter name="browser" value="edge"></parameter>

		<classes>

			<class name="testCases.TC_LicensesTest" />
			<class name="testCases.TC_DelegationTest" />
			<class name="testCases.TC_AssetIssueTest" />
			<class name="testCases.TC_BudgetTest" />
			<class name="testCases.TC_DocumentTypeTest" />
			<class name="testCases.TC_QualificationTest" />
			<class name="testCases.TC_BankTest" />
			<class name="testCases.TC_WorkLocationTest" />
			<class name="testCases.TC_ReligionTest" />
			<class name="testCases.TC_CalendarTest" />
			<class name="testCases.TC_GradeTest" />
			<class name="testCases.TC_DesignationTest" />
			<class name="testCases.TC_DeptTest" />
			<class name="testCases.TC_EmployeeTest" />
			<class name="testCases.TC_LoginTest" />			
		</classes>
	</test>


</suite> 

